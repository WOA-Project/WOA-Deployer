<UserControl x:Class="Deployer.Wpf.NumberSelectionPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deployer.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:NumberRequirementSolver}">
    <StackPanel>
        <GroupBox Header="{Binding Description}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" TextAlignment="Center" Text="{Binding Min}" />
                <Slider TickPlacement="BottomRight" Grid.Column="1" Value="{Binding Value, Mode=TwoWay}" Maximum="{Binding Max}"
                        TickFrequency="0.5" IsSnapToTickEnabled="True" AutoToolTipPrecision="2" Minimum="{Binding Min}" AutoToolTipPlacement="TopLeft" />
                <TextBlock VerticalAlignment="Center" TextAlignment="Center" Grid.Column="2" Text="{Binding Max}" />
            </Grid>
        </GroupBox
>
    </StackPanel>
</UserControl>
